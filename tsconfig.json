{
  "compilerOptions": {
    "lib": [
      "esnext",
      "DOM"
    ],
    "target": "esnext",
    "outDir": "lib",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {},
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": ["node_modules", "dist"]
}
